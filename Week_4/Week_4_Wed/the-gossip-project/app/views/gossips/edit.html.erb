<h1>Modifier le gossip</h1>
 
<%= form_for(:gossip, url: gossip_path, method: :patch) do |f| %>
  Auteur : <%= f.text_field :anonymoous_author %><br />
  Contenu : <%= f.text_area :content %><br />
  <%= f.submit %>
<% end %>

<%= link_to 'Supprimer le gossip', @gossip, method: :delete %>
<%= link_to 'Retour', root_path %>



